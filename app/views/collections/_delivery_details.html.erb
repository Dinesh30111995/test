<div id="delivery-details" class="zoom-anim-dialog mfp-hide modal sm_modal">
  <button class="modal__close md_cls" type="button"><i class="fas fa-times"></i></button>
  <h4 class="modal-title share_link_page_h4"><%= t('collections.show.delivery_details') %></h4>
  <%= form_tag(delivery_details_collection_path, method: :post, class: 'change-price-form') do %>
    <%= hidden_field_tag 'id', @collection.address, class: 'nft-detail-name' %>
    <div class="modal-body pl-30 pr-30">
      <div class="row mb-15 direct_nft_delivery-section">
        <div class="col-md-8 col-sm-8 col-xs-8">
          <label><%= t('collections.show.shipping_email') %>:</label>
        </div>
        <div class="col-md-12">
          <div class="form-group">
            <input type="text" name="delivery_email" class="sign__input delivery-email-field" placeholder="Enter Direct NFT delivery email" value="<%= @collection.delivery_email %>"required/>
          </div>
        </div>
        <%#- if @collection.physical_unlockable? %>
        <div class="col-md-8 col-sm-8 col-xs-8">
          <label><%= t('collections.show.shipping_address') %>:</label>
        </div>
        <div class="col-md-12">
          <div class="form-group">
            <textarea type="text" name="delivery_details" class="form-control sign__textarea" id="collection-direct_nft_delivery-details" placeholder="Enter Direct NFT delivery details" required><%= @collection.delivery_details %></textarea>
          </div>
        </div>
        <%# end %>
      </div>
    </div>
    <div class="modal-footer">
      <%= submit_tag 'Update', class: 'btn bidding-element-btn theme-btn'%>
      <a class="secondary-btn modal-cancel" data-dismiss="modal" role="button">Cancel</a>
    </div>
  <% end %>
</div>

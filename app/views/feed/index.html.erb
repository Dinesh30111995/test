<%= render "comments/comment_mention" %>
<section class="feed-section">
  <div class="container">
    <div class="row">
      <div class="col-xl-3 col-lg-3 col-md-3 col-sm-12 col-12">
        <%= render 'category_list' %>
        <%#= render 'recently_shared' %>
      </div>
      <div class="col-xl-9 col-lg-9 col-md-9 col-sm-12 col-12">
        <div class="row">
          <div class="col-xl-10 col-lg-10 col-md-10 col-sm-12 col-12">
            <% if current_user %>
              <%= render 'post_publisher' %>
            <% end %>
            <%= render 'featured_list' %>
            <div id="collection-list" class="asset-followers">
              <%= render 'asset_card_list' %>
            </div>
            <% if @collections.next_page.present? %>
              <div class="demand-loader">
                <%= link_to "Load more", load_more_button_feed_index_path(page: @collections.current_page+1), id: "load-more-posts", class:"loading-btn", remote: true %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<div class="main-content">
  <div class="page-content">
    <div class="container-fluid">
      <!-- start page title -->
      <div class="row">
        <div class="col-12">
        </div>
      </div>
    </div>
    <!-- end page title -->
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-body">
            <div class="row" style="">
              <% @collections.each do |collection| %>
                <div class="my-explore-div">
                  <div class="box-explore-bids">
                    <div class="explore-bids-img">
                      <span class="collection-card-img" style="background-image: url('<%= cover_url(collection) %>')">
                        <%= image_tag cover_url(collection)%>
                      </span>
                    </div>
                    <div class="explore-bid-opt-img">
                      <%= render partial: 'common/collection_owner_imgs', locals: {collection: collection} %>
                    </div>
                    <div class="explore-bids-content">
                      <h4><%= collection.title %></h4>
                      <p><b><%= collection.title_desc %></b></p>
                      <% if collection.max_bid %>
                        <p class="bid_status ethval"><%= t("shared.highest_bid")%> <b><%= collection.max_bid.value %></b></p>
                      <% else %>
                        <span class="ethval">No active Bids</span>
                      <% end %>
                      <p>
                        <% if collection.published? %>
                          <%= button_to 'UnPublish', update_collection_admin_user_path(collection.id, published: false), method: :put,
                                        class: "btn btn-success btn-no-style" , data: {confirm: 'Do you want to unpublish?'} %>
                        <%else %>
                          <%= button_to 'Publish', update_collection_admin_user_path(collection.id,  published: true), method: :put,
                                        class: "btn btn-primary btn-no-style", data: {confirm: 'Do you want to publish?'}  %>
                        <% end %>
                      </p>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="main-content">
  <div class="page-content">
    <div class="container-fluid">

      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-body">
              <div class="row">
                <div class="col-sm-6">
                  <h4 style="color:orangered"><%=flash[:notice]%></h4>
                  <h4 class="card-title"><%= t("admin.edition_drops.index.title") %></h4>
                </div>
                <div class="col-sm-2"></div>
                <div class="col-sm-4">
                  <%= link_to t("admin.edition_drops.index.add_new"), new_admin_edition_drop_path, class: "float-right btn btn-primary" %>
                </div>
              </div>
              <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                <thead>
                  <tr>
                    <!-- <th><%#= t("admin.edition_drops.index.id") %></th> -->
                    <th><%= t("admin.edition_drops.index.name") %></th>
                    <th><%= t("admin.edition_drops.index.address") %></th>
                    <th><%= t("admin.reserve_drops.index.starts_at") %></th>
                    <th><%= t("admin.reserve_drops.index.expires_in") %></th>
                    <th><%= t("admin.edition_drops.index.category") %></th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% if @edition_drops.present? %>
                    <% @edition_drops.excluding(:reserve_drops).each do |fcollection| %>
                      <tr>
                        <!-- <td><%#= fcollection.id %></td> -->
                        <td><%= fcollection.collection.name %></td>
                        <td><%= fcollection.collection.address %></td>
                        <td><%= fcollection.starts_at %></td>
                        <td><%= fcollection.expires_in %></td>
                        <td><%= fcollection.collection.category.join(',') %></td>
                        <td>
                          <%= link_to "Destroy", admin_edition_drop_path(fcollection), method: :delete, class: "pr-2" %>
                        </td>
                      </tr>
                    <% end %>
                  <% else %>
                    <tr>
                      <td colspan="4" class="text-center"><%= t(:no_records, scope: :admin) %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-12">
          <div class="flickr_pagination">
            <%= will_paginate @edition_drops %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="main-content">
  <div class="page-content">
    <div class="container-fluid">

      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-body">
              <div class="row">
                <div class="col-sm-6">
                  <h4 class="card-title"><%= t("admin.edition_drops.index.title") %></h4>
                </div>
                 <div class="col-sm-6">
                  <%= form_tag(new_admin_edition_drop_path, method: :get, class: '') do %>
                    <div class="row">
                      <div class="col-md-3">
                        <input name="query" type="text" id="name" placeholder="Search:" style="height:34px;" value="<%=params[:query]%>"/>
                      </div>
                      <div class="col-md-3">
                        <button type="submit" class="btn btn-primary btn-no-style">Search</button>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
              <table id="edition-collections" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                <thead>
                  <tr>
                  <th></th>
                  <th>Id</th>
                    <!-- <th><%#= t("admin.edition_drops.index.id") %></th> -->
                    <th><%= t("admin.edition_drops.index.name") %></th>
                    <th><%= t("admin.edition_drops.index.address") %></th>
                                        <th><%= t("admin.edition_drops.index.categories") %></th>


                  </tr>
                </thead>
                <tbody>
                  <% if @collections.present? %>
                    <% @collections.each do |collection| %>
                      <tr>
                        <td></td>
                        <td><%=collection.id%></td>
                        <!-- <td><%#= fcollection.id %></td> -->
                        <td><%= collection.name %></td>
                        <td><%= collection.address %></td>
                                                <td><%= collection.category.join(',') %></td>

                      </tr>
                    <% end %>
                  <% else %>
                    <tr>
                      <td colspan="4" class="text-center"><%= t(:no_records, scope: :admin) %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
      <%= form_tag(add_admin_edition_drops_path, method: :post, id: 'edition_drops_form') do %>

        <div class="card-body">
          <h4 class="card-title"> Other Details</h4>

         <div class="form-group row">
            <label for="example-text-input" class="col-md-2 col-form-label"><%= t("admin.edition.form.start_at") %></label>
            <div class="col-md-10">
                <%= datetime_field_tag 'edition_drop[starts_at]', nil, class: 'form-control' , style: 'width:250px;', placeholder: t('admin.reseve_drops.form.start_at') %>
                <input name="edition_drop[collection_ids]" type="hidden" id="selected_edition_items"/>
            </div>
          </div>

          <div class="form-group row">
            <label for="example-text-input" class="col-md-2 col-form-label"><%= t("admin.edition.form.expires_in") %></label>
            <div class="col-md-10">
                <%= datetime_field_tag 'edition_drop[expires_in]', nil, class: 'form-control' , style: 'width:250px;', placeholder: t('admin.reseve_drops.form.expires_in') %>
            </div>
          </div>

          <div class="form-group row">
            <label for="example-text-input" class="col-md-2 col-form-label"></label>
            <div class="col-md-10">
            <button type="submit" id="edition_add" class="btn btn-primary mr-1 w-md"><%= t('shared.submit')%></button>
            <%= link_to t('shared.cancel'), admin_edition_drops_path, class: "btn btn-secondary w-md add_btn" %>            </div>
          </div>
        </div>
     <% end %>

      <div class="row">
        <div class="col-12">
          <div class="flickr_pagination">
            <%= will_paginate @collections %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">

</script>

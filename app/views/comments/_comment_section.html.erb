<% classes ||= '' %>
<div class="comment-section <%= classes %>">
  <h2 class="heading-cmnt">comments</h2>
  <div id="comment-section-<%= collection.address %>">
    <% if current_user %>
      <div class="demain-flex">
        <div class="bg-tag">
          <%= image_tag current_user.profile_image, class: 'img-responsive' %>
        </div>
        <div class="comment-flex">
          <div contenteditable="true" class="form-control comment-section-input comment-textarea" id="comment-input-<%= collection.address %>" data-address="<%= collection.address %>" ></div> 
          <%
=begin%>
 <textarea type="text" class="form-control comment-section-input" id="comment-input-<%= collection.address %>" data-address="<%= collection.address %>" placeholder="Please Enter Your Comment" rows="3"></textarea> 
<%
=end%>
          <button class="home__btn home__btn--clr comment-create demand-btn-comment aeroplane-zero" data-id="<%= collection.address %>">
            <i class="fas fa-paper-plane"></i>
          </button>
        </div>
      </div>
    <% else %>
      <div class="demain-flex">
        <div class="bg-tag">
          <img src="/assets/default_user.png" class="img-responsive">
        </div>
        <div class="comment-flex">
          <input type="text" class="form-control comment-section-input connect-to-wallet"  placeholder="Please Enter Your Comment">
          <button class="home__btn home__btn--clr comment-create demand-btn-comment aeroplane-zero connect-to-wallet">
            <i class="fas fa-paper-plane"></i>
          </button>
        </div>
      </div>
    <% end %>
    <% if collection.comments.length > 0 %>
      <div id="comment_section_<%= collection.address %>">
        <%= render "comments/comment_row", collection: collection %>
      </div>
    <% end %>
  </div>
</div>